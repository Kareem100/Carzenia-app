<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UpdateCarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cooper_font"
        android:text="UPDATE A CAR"
        android:textColor="@color/FontColor"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Car ID"
            android:textColor="@color/HighlightColor" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_margin="24dp"
            android:background="@color/HighlightColor"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/comic_font"
        android:text="Car Info"
        android:textColor="@color/FontColor"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/updatedCarImage"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Car Type"
        android:textColorHint="@color/HighlightColor"
        app:boxStrokeColor="@color/HighlightColor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updatedTypeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comic_font"
            android:textColor="@color/FontColor" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Car Occasion"
        android:textColorHint="@color/HighlightColor"
        app:boxStrokeColor="@color/HighlightColor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updatedOccasionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comic_font"
            android:textColor="@color/FontColor" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Car Price/Hour"
        android:textColorHint="@color/HighlightColor"
        app:boxStrokeColor="@color/HighlightColor">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updatedPriceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comic_font"
            android:textColor="@color/FontColor" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        style="@style/DefaultText"
        android:id="@+id/saveUpdatedCarBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner2"
        android:text="Save Changes" />
</LinearLayout>