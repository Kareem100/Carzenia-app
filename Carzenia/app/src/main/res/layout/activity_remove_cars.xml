<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UpdateCarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cooper_font"
        android:text="REMOVE CAR/s"
        android:textColor="@color/FontColor"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="Car ID"
            android:textColor="@color/HighlightColor" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_margin="24dp"
            android:background="@color/HighlightColor"
            android:textAlignment="center" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/comic_font"
        android:text="Car Info"
        android:textColor="@color/FontColor"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/removedCarImage"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/removedCarType"
        style="@style/DefaultText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Car Type"
        android:textColor="@color/HighlightColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/removedCarOccasion"
        style="@style/DefaultText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Car Occasion"
        android:textColor="@color/HighlightColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/removedCarPrice"
        style="@style/DefaultText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Car Price/Hour"
        android:textColor="@color/HighlightColor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/removeSelectedCarBtn"
        style="@style/DefaultText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner2"
        android:textColor="#000"
        android:text="Remove Selected" />
    <Button
        android:id="@+id/removeAllCarsBtn"
        style="@style/DefaultText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@android:color/holo_red_dark"
        android:text="Remove All Cars" />
</LinearLayout>