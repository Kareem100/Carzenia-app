<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_spacing"
    android:minHeight="@dimen/message_answer_height"
    app:cardBackgroundColor="@color/BackgroundColor"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">

        <LinearLayout
            android:id="@+id/layout_customer_subject_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/medium_spacing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/medium_spacing"
                android:text="@string/subject"
                android:textAllCaps="true"
                android:textColor="@color/HighlightColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_view_customer_message_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"
                tools:text="Message Subject" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_customer_body_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_customer_subject_container"
            android:orientation="horizontal"
            android:padding="@dimen/medium_spacing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/medium_spacing"
                android:text="@string/message"
                android:textAllCaps="true"
                android:textColor="@color/HighlightColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_view_customer_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/medium_spacing"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"
                tools:text="Message body" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_customer_body_container"
            android:orientation="horizontal"
            android:padding="@dimen/medium_spacing">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/medium_spacing"
                android:text="@string/response"
                android:textAllCaps="true"
                android:textColor="@color/HighlightColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_view_customer_message_response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:padding="@dimen/medium_spacing"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_small"
                tools:text="Message Response" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
