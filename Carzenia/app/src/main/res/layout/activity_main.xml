<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:transitionName="logo_image"
        android:src="@drawable/logo2"/>
    <TextView
        style="@style/DefaultText"
        android:id="@+id/descriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_below="@id/logoImage"
        android:text="Book unforgettable cars from trusted hosts around the world."/>
    <TextView
        android:id="@+id/titleView"
        android:transitionName="logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:background="@drawable/border"
        android:fontFamily="@font/cooper_font"
        android:textColor="#FF6F00"
        android:textSize="40dp"
        android:text="CARZENIA"/>
    <TextView
        android:id="@+id/rightsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comic_font"
        android:textColor="@color/FontColor"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:text="FROM BONUS&#8482; TEAM \n ALL RIGHTS ARE RESERVED &#xA9;"/>
</RelativeLayout>