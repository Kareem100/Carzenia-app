<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_spacing"
        android:background="@drawable/rounded_corner2"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_car_item"
            android:layout_width="@dimen/car_image_dimensions_large"
            android:layout_height="@dimen/car_image_dimensions_large"
            android:background="@drawable/rounded_corner"
            android:padding="@dimen/small_spacing"
            android:scaleType="fitXY"
            tools:src="@drawable/splash_background" />

        <TextView
            android:id="@+id/text_view_car_id_item"
            style="@style/DefaultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_small"
            tools:text="CAR ID" />

        <TextView
            android:id="@+id/carTypeT"
            style="@style/DefaultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_small"
            tools:text="CAR TYPE" />

        <TextView
            android:id="@+id/text_view_car_occasion_item"
            style="@style/DefaultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textSize="@dimen/text_size_small"
            tools:text="CAR OCCASION" />

        <TextView
            android:id="@+id/text_view_car_price_item"
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="@drawable/border"
            android:textSize="@dimen/text_size_small"
            tools:text="CAR PRICE / HOUR" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_car_update_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/update"
                android:textColor="@color/FontColor" />

            <Button
                android:id="@+id/button_car_remove_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="@string/remove"
                android:textColor="@color/FontColor" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>